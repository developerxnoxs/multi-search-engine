modules = ["php-8.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["php82", "php82Packages.composer"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Example"

[[workflows.workflow]]
name = "Run Example"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php example/test.php"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

